{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "rootDirs": [
      "./src"
    ],
    "outDir": "./dist",
    "types": [
      "node",
      "react"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./typings/**/*.d.ts",
    "./node_modules/**/*.d.ts"
  ],
  "compileOnSave": false
}